{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "forOf": true,
    "jsx": true,
    "classes": true,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    "templateStrings": true,
    "modules": true
  },
  "rules": {
    "brace-style": [2, "1tbs", { "allowSingleLine: true" }],
    "camelcase": 0,
    "comma-style": [1, "last"],
    "eqeqeq": 1,
    "indent": [2, 2],
    "no-trailing-spaces": 1,
    "no-unused-vars": 1,
    "quotes": [2, "single"],
    "semi": [1, "never"]
  }
}
